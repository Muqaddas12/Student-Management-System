Database Details!!!!!!!!!!  

*****************Registration Table************
CREATE TABLE student_details (
    id INT PRIMARY KEY AUTO_INCREMENT,
    
    -- Personal Details
    category VARCHAR(50),
    religion VARCHAR(50),
    state VARCHAR(50),
    district VARCHAR(50),
    
    -- Academic Details
    department VARCHAR(100),
    programme VARCHAR(100),
    batch_year YEAR,
    admission_type VARCHAR(50),
    admission_quota VARCHAR(50),
    
    -- Facilities
    hostel_required ENUM('Yes', 'No'),
    transportation_required ENUM('Yes', 'No'),
    
    -- Identification
    photo VARCHAR(255),
    admission_no VARCHAR(50) UNIQUE,
    enrollment_no VARCHAR(50) UNIQUE,
    roll_no VARCHAR(50) UNIQUE,
    
    -- Student Information
    title VARCHAR(10),
    first_name VARCHAR(50),
    middle_name VARCHAR(50),
    last_name VARCHAR(50),
    email VARCHAR(100) UNIQUE,
    mobile_number VARCHAR(15) UNIQUE,
    date_of_birth DATE,
    aadhar_no VARCHAR(20) UNIQUE,
    digilocker_id VARCHAR(50) UNIQUE,
    address_1 TEXT,
    pin_code VARCHAR(10),
    
    -- Parent Details
    father_name VARCHAR(100),
    father_occupation VARCHAR(100),
    father_mobile VARCHAR(15),
    mother_name VARCHAR(100),
    
    -- Education Details
    twelfth_stream VARCHAR(50),
    diploma VARCHAR(50),
    
    -- 10th Details
    tenth_marks_grade VARCHAR(10),
    tenth_passing_year YEAR,
    tenth_board VARCHAR(100),
    
    -- 12th Details
    twelfth_marks_grade VARCHAR(10),
    twelfth_passing_year YEAR,
    twelfth_board VARCHAR(100),
    
    -- Other Education Details
    marks_grade VARCHAR(10),
    passing_year YEAR,
    board VARCHAR(100),
    
    -- Graduation Details
    graduation_marks_grade VARCHAR(10),
    graduation_passing_year YEAR,
    graduation_university VARCHAR(100),
    
    -- Post Graduation Details
    post_graduation_marks_grade VARCHAR(10),
    post_graduation_passing_year YEAR,
    post_graduation_university VARCHAR(100)
);
