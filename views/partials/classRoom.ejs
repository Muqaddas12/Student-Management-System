    <script>
        function changeTab(tabName, element) {
            // Tab content mapping
            const tabContent = {
                courseWork: "<h2>Course Work</h2><p>Details about the course materials and syllabus.</p>",
                resources: "<h2>Resources</h2><p>Important reference books, notes, and links.</p>",
